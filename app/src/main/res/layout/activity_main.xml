<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_portrait"
    android:scaleType="fitXY"
    tools:context="com.androidandyuk.bikersbestfriend.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectedVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="0"
            android:background="@drawable/rounded_corners_grey_orange"
            android:padding="8dp"
            android:text="Go to Garage to add a Bike"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0"
            android:background="@drawable/rounded_corners"
            android:onClick="goToGarage"
            android:text="Garage"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:layout_weight="0"
            android:background="@drawable/rounded_corners"
            android:onClick="goToFueling"
            android:text="Fueling"
            android:textColor="@android:color/white" />

        <!--<Button-->
        <!--android:id="@+id/groupRideButton"-->
        <!--android:layout_width="160dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_weight="0"-->
        <!--android:background="@drawable/rounded_corners"-->
        <!--android:onClick="groupRideClicked"-->
        <!--android:text="Group Ride"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:visibility="invisible"/>-->

        <!--<Button-->
        <!--android:id="@+id/emergencyButton"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="16dp"-->
        <!--android:layout_weight="0"-->
        <!--android:backgroundTint="@android:color/holo_red_light"-->
        <!--android:onClick="emergencyClicked"-->
        <!--android:text="Emergency"-->
        <!--android:textColor="@android:color/white" />-->

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:layout_weight="0"
            android:background="@drawable/rounded_corners"
            android:onClick="goToLocations"
            android:text="Locations"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button25"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:layout_weight="0"
            android:background="@drawable/rounded_corners"
            android:onClick="goToAnnualReports"
            android:text="Annual Reports"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weatherView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="0"
                android:gravity="right"
                android:onClick="loadWeather"
                android:text="Today's Weather"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
