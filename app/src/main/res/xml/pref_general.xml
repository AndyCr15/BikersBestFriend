<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="MOT_warnings_switch"
        android:summary="Would you like to be warned 2 weeks before your MOT is due?"
        android:title="MOT Warnings" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="service_warnings_switch"
        android:summary="Would you like to be warned 2 weeks before your Service is due?"
        android:title="Service Warnings" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_choose_theme"
        android:entryValues="@array/pref_choose_theme_values"
        android:key="theme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Choose A Theme" />

</PreferenceScreen>
